{
  "name": "pristineui-monorepo",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "concurrently -n ui,site,playground,storybook -c auto \"pnpm -C packages/pristineui dev\" \"pnpm -C apps/site dev\" \"pnpm -C apps/playground dev\" \"pnpm -C packages/pristineui storybook\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "playwright": "^1.57.0",
    "prop-types": "^15.8.1",
    "storybook": "^10.1.11",
    "vitest": "^4.0.16"
  }
}
